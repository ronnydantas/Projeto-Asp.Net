@page
@model WebTest.Pages.AbrirChamadoModel

<h1>Abrir Chamado</h1>

<form method="post">

    <div class="form-group">
        <label for="resumo">Título:</label>
    </div>

    <div class="form-group">
        <label for="resumo">Resumo:</label>
        <input type="text" class="form-control" id="resumo" asp-for="Chamado.Resumo">
    </div>

    <div class="form-group">
        <label for="prioridade">Prioridade:</label>
        <select class="form-control" id="prioridade" asp-for="Chamado.Prioridade">
            <option value="Alta">Alta</option>
            <option value="Média">Média</option>
            <option value="Baixa">Baixa</option>
        </select>
    </div>


    <div class="form-group">
        <label for="categoria">Categoria:</label>
        <input type="text" class="form-control" id="categoria" asp-for="Chamado.Categoria">
    </div>



    <div class="form-group">
        <label for="descricao">Descrição:</label>
        <textarea class="form-control" id="descricao" asp-for="Chamado.Descricao" rows="4"></textarea>
    </div>


    <button type="submit" class="btn btn-primary">Abrir Chamado</button>
</form>
